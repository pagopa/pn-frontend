{
  "name": "piattaforma-notifiche-monorepo",
  "private": true,
  "devDependencies": {
    "craco": "^0.0.3",
    "lerna": "^4.0.0",
    "sonarqube-scanner": "^2.8.1"
  },
  "scripts": {
    "postinstall": "lerna bootstrap",
    "start:pa": "lerna run start --parallel --scope @pagopa-pn/pn-pa-webapp --scope @pagopa-pn/pn-commons",
    "start:pf": "lerna run start --parallel --scope @pagopa-pn/pn-personafisica-webapp --scope @pagopa-pn/pn-commons",
    "start:login": "lerna run start --parallel --scope @pagopa-pn/pn-personafisica-login --scope @pagopa-pn/pn-commons",
    "build": "lerna run build --include-dependencies --since HEAD~1",
    "test": "lerna run --scope @pagopa-pn/* test",
    "test:coverage": "lerna run --scope @pagopa-pn/* test:coverage",
    "refresh:monorepo": "lerna clean -y && yarn install",
    "clean:win": "rmdir node_modules /s",
    "clean:nx": "rm -rf node_modules",
    "lint": "lerna run --scope @pagopa-pn/* lint",
    "format": "lerna run --scope @pagopa-pn/* format",
    "sonar": "node sonarqube-scanner.js -Dsonar.login={$SONAR_TOKEN}"
  },
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  }
}
